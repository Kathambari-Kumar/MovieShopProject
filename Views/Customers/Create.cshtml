@model MovieShop.Models.Db.Customer

@{
    ViewData["Title"] = "Create";
}


<br />
<br />
<div style="width:900px;height:25px;background-color:dimgray; color:white;font-weight:bold">
    Create Movie Details
</div>
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
