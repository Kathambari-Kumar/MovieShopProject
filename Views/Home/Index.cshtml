@model MovieShop.Models.ViewModels.MoviesVM

 @{
    ViewData["Title"] = "Index";


} 

<h1>Top 5 Newest Movies</h1>
<div class="movie-section">
    @foreach(var movie in Model.Top5Newest)
    {
        <div class="row">
            <div class="card" style="background-color:whitesmoke; width:230px; height:300px">
                <div class="card-header bg-secondary"><h3>@movie.Title</h3></div>
                <div class="card-body">
                    <img src="@movie.TargetUrl" width="150" height="150" />
                    <h6 class="fw-bold">Release Year : @movie.Release_Year</h6>

                    <h6 class="fw-bold">Price : @movie.Price</h6>

                </div>

            </div>
        </div>
        
     
       


    }

</div>

