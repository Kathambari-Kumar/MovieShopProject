@model MovieShop.Models.ViewModels.MoviesVM

 @{
    ViewData["Title"] = "Index";
} 
<br />
<div class="col-sm-12 text-white bg-dark fw-bold" height="20px">
    &nbsp;&nbsp; Top 5 Newest Movies
</div>
<br />

<div class="row" width="100px" height="250px">
    @foreach(var movie in Model.Top5Newest)
    {
        <div class="card col-sm" id="carddiv">
            <div class="card-header" id="cardheader">
                <p>@movie.Title</p>
            </div>
            <div class="card-body" height="250px">
                <img src="@movie.TargetUrl" width="150" height="150" />
                <h6 class="fw-bold">
                    <span style="color:blue">Genre : </span>@movie.Genre
                </h6>
                <h6 class="fw-bold">
                    <span style="color:blue">Year : </span>@movie.Release_Year
                </h6>
                <h6 class="fw-bold">
                    <span style="color:blue">Price : </span>@movie.Price SEK
                </h6>
            </div>
        </div>
    }
</div>
<hr />

<div class="text-white bg-dark fw-bold col-sm-12" height="20px">
    &nbsp;&nbsp; Top 5 Oldest Movies
</div>

<br />
<div class="row" height="340px">
    @foreach (var movie in Model.Top5Oldet)
    {
        <div class="card col-sm" id="carddiv">
            <div class="card-header" id="cardheader">
