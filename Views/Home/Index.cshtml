                    <span style="color:blue">Genre : </span>@movie.Genre</h6>
                <h6 class="fw-bold">
                    <span style="color:blue">Year : </span>@movie.Release_Year</h6>
                <h6 class="fw-bold"> 
                    <span style="color:blue">Price : </span>@movie.Price SEK</h6>
            </div>
        </div>
    }
</div>

<hr />
<div class="text-white bg-dark col-sm-12 fw-bold" height="20px">
    Top 5 Cheapest Movies
</div>
<br />
<div class="row" height="300px">
    @foreach (var movie in Model.Top5Cheapest)
    {
        <div class="card col-sm" id="carddiv">
            <div class="card-header" id="cardheader">
                <p>@movie.Title</p>
            </div>
            <div class="card-body" height="250px">
                <img src="@movie.TargetUrl" width="150" height="150" />
                <h6 class="fw-bold">
                    <span style="color:blue">Genre : </span>@movie.Genre
                </h6>
                <h6 class="fw-bold">
                    <span style="color:blue">Year : </span>@movie.Release_Year
                </h6>
