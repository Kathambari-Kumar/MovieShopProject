@model IEnumerable<MovieShop.Models.Db.Movie>

@{
    ViewData["Title"] = "Details";
}

<h4>Movies List</h4>
<hr />
<div class="row">
@foreach (var item in Model)
{
    <div class="col-md-4">
    <partial name="_MoviePartial" model="item" /><br />
    </div>
}
</div>
<div>
    <a class="btn btn-danger" asp-controller="Cart" asp-action="DisplayCart">Go to Cart</a>
</div>