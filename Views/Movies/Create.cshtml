@model MovieShop.Models.Db.Movie

@{
    ViewData["Title"] = "Create";
}

<br />
<br />
<div style="width:900px;height:25px;background-color:dimgray; color:white;font-weight:bold">
    Create Movie Details
</div>

<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <strong>
                    <label asp-for="Title" class="control-label"></label>
                </strong>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <strong>
                    <label asp-for="Director" class="control-label"></label>
                </strong>
                <input asp-for="Director" class="form-control" />
                <span asp-validation-for="Director" class="text-danger"></span>
            </div>
            <div class="form-group">
                <strong>
                    <label asp-for="Genre" class="control-label"></label>
                </strong>
                <input asp-for="Genre" class="form-control" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <strong>
                    <label asp-for="Release_Year" class="control-label"></label>
                </strong>
                <input asp-for="Release_Year" class="form-control" />
                <span asp-validation-for="Release_Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <strong>
                    <label asp-for="Price" class="control-label"></label>
                </strong>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <strong>
                    <label asp-for="TargetUrl" class="control-label"></label>
                </strong>
                <input asp-for="TargetUrl" class="form-control" />
                <span asp-validation-for="TargetUrl" class="text-danger"></span>
            </div>
            <hr>
            <div class="form-group">
                <input type="submit" value="Create" class="btn text-white bg-black bg-gradient" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

