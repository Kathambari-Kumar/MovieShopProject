@{
}

@model IEnumerable<MovieShop.Models.Db.Movie>

@{
    ViewData["Title"] = "Display";
}

<div class="col-sm-3" id="title">
    Genre Based Movie List
</div>
<br />


<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-3">
            <partial name="_MoviePartial" model="item" /><br />
        </div>
    }
</div>

<hr />
<div style="background-color:black; width:100%">
    <a class="btn btn-black bg-gradient text-white" asp-controller="Cart" asp-action="DisplayCart">Go To Cart</a>
</div>

<style>
    #title {
        width: 1000px;
        height: 25px;
        background-color: dimgray;
        color: white;
        font-weight: bold;
    }
</style>