<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MovieShopDesign</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MovieShopDesign.styles.css" asp-append-version="true" />
</head>
<body>
<div id="header" class="bg-black">
    <div id="header_left" class="fn font-monospace align-text-bottom fs-2">
        <header>
            <img src="~/Images/HeaderLogo.jpg" width="100" height="80" />
        </header>
    </div>

    <div id="header_right">
        <nav class="navbar navbar-expand-md navbar-dark">
            <div class="navbar-nav justify-content-end flex-grow-1 pe-3">
                <a class="navbar-brand text-white fs-4" href="#">Home</a>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <button class="btn bg-black text-white fs-4 dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            Customer
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Customers" asp-action="Create">Register</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-controller="Customers" asp-action="Details">Display</a></li>
                             <li><hr class="dropdown-divider"></li>
                              <li><a class="dropdown-item" asp-controller="Customers" asp-action="Edit">Edit</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <button class="btn bg-black text-white fs-4 dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            Movie
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Movies" asp-action="Create">Create</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-controller="Movies" asp-action="Details">Display</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-controller="Movies" asp-action="Edit">Edit</a></li>
                        </ul>
                    </li>
                    <li>
                        <div class="text-white" id="cartCount">
                        </div>
                    </li>
              
                </ul>
            </div>
        </nav>
    </div>
</div>
<hr />

<div width="1024px" height="600px">
    <div id="body_left" class="bg-black bg-opacity-75">

        <div id="carouselExampleAutoplaying" class="vertical carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img id="corousel_img" src="~/Images/Avengers.jpg" class="d-block w-75" alt="...">
                </div>
                <div class="carousel-item">
                    <img id="corousel_img" src="~/Images/HarryPotter.jpg" class="d-block w-75" alt="...">
                </div>
                <div class="carousel-item">
                    <img id="corousel_img" src="~/Images/LoveAgain.jpg" class="d-block w-75" alt="...">
                </div>
                <div class="carousel-item">
                    <img id="corousel_img" src="~/Images/WalkAlone.jpg" class="d-block w-75" alt="...">
                </div>
            </div>
        </div>

    </div>

            <div id="body" class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
            @*  <div id="body_right" style="background-color:green">right</div> *@
        </div>
        <hr />
       @*  <footer class="bg-black bg-opacity-75">
            <div id="footer_left" class="btn btn-default btn-lg text-white">
                Copyright Interstellar Movie Shop<br />
                2024 Some Rights Reserved.<br />
            </div>
            <div id="footer_right"></div>
        </footer> *@
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>

