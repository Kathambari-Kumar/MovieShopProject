<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MovieShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MovieShop.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Interstellar MovieShop</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
              </button>          
                <div id="header_right">
                    <nav class="navbar navbar-expand-md navbar-dark">
                        <div class="navbar-nav flex-grow-1 pe-3">
                            <a class="navbar-brand text-info fs-4" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            <ul class="navbar-nav">
                                <li class="nav-item dropdown">
                                    <button class="btn bg-black text-info fs-4 dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                       MOVIESHOP
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Movies" asp-action="Create">Movies Create</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Movies" asp-action="Details">Movies Display</a></li>
                                    </ul>
                            </ul>
                        </div>
                    </nav>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div id="footer_left">
                <button type="button" class="btn btn-default btn-lg">
                    <span style="color:white" class="glyphicon glyphicon-copyright-mark" aria-hidden="true"></span>
                    Copyright<br />
                    Eden Pauline kathambari Mansi<br />
                    2024 Some Rights Reserved.<br />
                </button>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
